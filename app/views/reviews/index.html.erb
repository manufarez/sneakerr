<%= turbo_frame_tag dom_id(@sneaker, :reviews) do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex items-center justify-between">
      <h1 class="text-xl font-bold">Reviews (<span id="<%= dom_id(@sneaker, :reviews_count) %>"><%= @sneaker.reviews.count %></span>)</h1>
    </div>
    <div id="reviews" class="min-w-full">
      <%= render @reviews %>
    </div>
  </div>
<% end %>
