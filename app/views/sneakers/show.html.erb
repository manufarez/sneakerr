<%= turbo_stream_from [@sneaker, :reviews] %>
<% if notice.present? %>
  <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
<% end %>

<div class="flex gap-5">
  <div class="w-2/3">
    <%= render @sneaker %>
  </div>
  <div class="w-1/3">
    <%= turbo_frame_tag dom_id(@sneaker, :reviews), src: sneaker_reviews_path(@sneaker) %>
    <%= turbo_frame_tag dom_id(@sneaker, :review_form), src: new_sneaker_review_path(@sneaker) %>
  </div>
</div>

<div class="flex gap-5">
  <%= link_to 'Edit this sneaker', edit_sneaker_path(@sneaker), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= button_to 'Destroy this sneaker', sneaker_path(@sneaker), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
</div>
