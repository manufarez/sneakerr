<div id="<%= dom_id sneaker %>" class="relative border border-gray-300 rounded-lg">
  <%= turbo_frame_tag dom_id(sneaker, :items_in_cart) do %>
    <%= render partial: 'count', locals: {sneaker: sneaker} %>
  <% end %>
  <%= link_to sneaker do  %>
    <div class="p-2 bg-white rounded-t-lg"><%= image_tag sneaker.image, alt: "Product picture", class:'rounded mx-auto' %></div>
    <div class="p-2">
      <div class="flex justify-between">
        <h2 class="font-bold"><%= sneaker.name %></h2>
        <span class="font-bold text-green-500"><%= number_to_currency(sneaker.price) %></span>
      </div>
      <div class="text-xs text-gray-500">
        <%= sneaker.brand %>
      </div>
      <p class="text-sm text-gray-700"><%= sneaker.description %></p>
    </div>
  <% end %>
  <div class="p-2 pt-0">
    <%= button_to add_to_cart_path(sneaker),class:'btn-primary w-full hover:bg-blue-400 text-sm font-semibold' do %>
      Add to cart
    <% end %>
  </div>
</div>
