<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Sneakers</h1>
    <%= link_to 'New sneaker', new_sneaker_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="sneakers" class="grid grid-cols-1 gap-10 mt-10 md:grid-cols-3 sm:grid-cols-2">
    <%= render @sneakers %>
  </div>
</div>
